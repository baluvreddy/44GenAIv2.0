<UserControl x:Class="MyWPFApp.CreateProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyWPFApp">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Create Project" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBox x:Name="txtTitle" Grid.Row="1" Margin="10,5" Height="30" Text="Enter project title"/>
        <TextBox x:Name="txtStartDate" Grid.Row="2" Margin="10,5" Height="30" Text="YYYY-MM-DD"/>
        <ComboBox x:Name="cmbProjectType" Grid.Row="3" Margin="10,5" Height="30">
            <ComboBoxItem Content="API"/>
            <ComboBoxItem Content="Frontend"/>
            <ComboBoxItem Content="Backend"/>
        </ComboBox>
        <TextBox x:Name="txtDescription" Grid.Row="4" Margin="10,5" Height="60" AcceptsReturn="True" Text="Enter description"/>
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10,10,5">
            <Button x:Name="btnCreate" Content="Create" Width="100" Height="30" Margin="0,0,10,0" Background="#FF42A5F5" Foreground="White" Click="btnCreate_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="30" Background="#FFEF5350" Foreground="White" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</UserControl>