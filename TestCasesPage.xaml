<UserControl x:Class="MyWPFApp.TestCasesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyWPFApp">
    <UserControl.Resources>
        <!-- Make sure TagsConverter class exists and is public in namespace MyWPFApp -->
        <local:TagsConverter x:Key="TagsConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtProjectTitle"
                   Grid.Row="0"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <DataGrid x:Name="dgTestCases"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Test Case ID" Binding="{Binding testcaseid}" Width="100"/>
                <DataGridTextColumn Header="Description" Binding="{Binding testdesc}" Width="*"/>
                <DataGridTextColumn Header="Pre-Test ID" Binding="{Binding pretestid}" Width="100"/>
                <DataGridTextColumn Header="Prerequisite" Binding="{Binding prereq}" Width="150"/>
                <DataGridTextColumn Header="Tags" Binding="{Binding tag, Converter={StaticResource TagsConverter}}" Width="100"/>

                <DataGridTemplateColumn Header="Actions" Width="220">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Content="View Test Steps"
                                        Click="ViewTestSteps_Click"
                                        Tag="{Binding testcaseid}"
                                        Background="#FF42A5F5"
                                        Foreground="White"
                                        Width="100"
                                        Height="25"
                                        Margin="0,0,6,0"/>
                                <Button Content="Generate &amp; Execute"
                                        Click="GenerateAndExecute_Click"
                                        Tag="{Binding testcaseid}"
                                        Background="#FF66BB6A"
                                        Foreground="White"
                                        Width="110"
                                        Height="25"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnBack"
                Grid.Row="2"
                Content="Back to Projects"
                Width="150"
                Height="30"
                Background="#FFEF5350"
                Foreground="White"
                Click="btnBack_Click"/>
    </Grid>
</UserControl>
