<UserControl x:Class="MyWPFApp.ExecutionLogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyWPFApp">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Execution Log History" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        <DataGrid x:Name="dgExecutionLogs" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Execution ID" Binding="{Binding exeid}" Width="100"/>
                <DataGridTextColumn Header="Test Case ID" Binding="{Binding testcaseid}" Width="100"/>
                <DataGridTextColumn Header="Script Type" Binding="{Binding scripttype}" Width="100"/>
                <DataGridTextColumn Header="Date" Binding="{Binding datestamp}" Width="100"/>
                <DataGridTextColumn Header="Time" Binding="{Binding exetime}" Width="100"/>
                <DataGridTextColumn Header="Message" Binding="{Binding message}" Width="*"/>
                <DataGridTextColumn Header="Output" Binding="{Binding output}" Width="200"/>
                <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>