<Window x:Class="MyWPFApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Register"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#2E2E2E"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <!-- Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Name"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="2,0,0,4"/>
            <TextBox x:Name="txtName"
                     Height="35"
                     Padding="10,0"
                     FontSize="14"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Email"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="2,0,0,4"/>
            <TextBox x:Name="txtMail"
                     Height="35"
                     Padding="10,0"
                     FontSize="14"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Password"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="2,0,0,4"/>
            <PasswordBox x:Name="txtPassword"
                         Height="35"
                         Padding="10,0"
                         FontSize="14"
                         VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Role -->
        <StackPanel Grid.Row="4" Margin="0,0,0,20">
            <TextBlock Text="Select Role"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#555"
                       Margin="2,0,0,4"/>
            <ComboBox x:Name="cmbRole"
                      Height="35"
                      Padding="10,0"
                      FontSize="14"
                      VerticalContentAlignment="Center">
                <ComboBoxItem Content="role-1"/>
                <ComboBoxItem Content="role-2"/>
                <ComboBoxItem Content="role-3"/>
            </ComboBox>
        </StackPanel>

        <!-- Register Button -->
        <Button x:Name="btnRegister"
                Grid.Row="5"
                Content="Register"
                Height="35"
                Margin="0,10,0,10"
                Background="#0078D7"
                Foreground="White"
                FontWeight="SemiBold"
                BorderThickness="0"
                Click="btnRegister_Click"/>

        <!-- Back to Login Link -->
        <TextBlock Grid.Row="6"
                   HorizontalAlignment="Center"
                   Foreground="#0078D7">
            <Hyperlink Click="Hyperlink_Click">
                Back to Login
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
