<UserControl x:Class="MyWPFApp.TestStepsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyWPFApp">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtTestCaseTitle" Grid.Row="0" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListView x:Name="lvTestSteps" Grid.Row="1" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Step Number" Width="100" DisplayMemberBinding="{Binding StepNumber}"/>
                    <GridViewColumn Header="Step Description" Width="300" DisplayMemberBinding="{Binding StepDescription}"/>
                    <GridViewColumn Header="Argument" Width="150" DisplayMemberBinding="{Binding Argument}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnBack" Grid.Row="2" Content="Back to Test Cases" Width="150" Height="30" Background="#FFEF5350" Foreground="White" Click="btnBack_Click"/>
    </Grid>
</UserControl>